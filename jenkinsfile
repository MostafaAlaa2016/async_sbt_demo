pipeline {
    agent {
        docker {
            image 'hseeberger/scala-sbt'
        }
    }
    stages {
        stage('Build') {
            echo 'Building..'
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh "sbt test"
            }
        }
        stage('deploy') {
            steps {
                echo 'deploying..'
                sh "sbt packageSubmission"
            }
        }
    } 
}
